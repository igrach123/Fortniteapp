	<body class="game-details">
		<%- include("../partials/nav.ejs") %>

		<div class="container">
			<h1 class="game-details-h1"><%= blog.title %></h1>
			<div class="row">
				<div class="offset-sm-1 col-sm-3">
					<img
						src="/img/games/thumbs/<%= blog.img %>"
						class="game-img"
						alt="<%= blog.img %> "
					/>
				</div>
				<div class="col-sm-8 yt-video">
					<iframe
						width="680"
						height="350"
						src="https://www.youtube.com/embed/<%=blog.video%>"
						frameborder="0"
						allowfullscreen
					></iframe>
					<br />
				</div>
			</div>

			<div class="content container-fluid">
				<br />
				<p class="textarea"><%= blog.textarea %></p>
				<p class="game-snippet"><%= blog.snippet %></p>
				<a href="/updateblog/<%= blog._id %>"
					><button class="btn btn-success">
						<i class="fa fa-cloud-upload" aria-hidden="true"></i></button
				></a>
				<a class="btn btn-info" href="/games">
					<i class="fa fa-hand-o-left" aria-hidden="true"></i
				></a>
			</div>
		</div>

