<div class="modal fade" id="updateplayer" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add new Player</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="col align-self-end">

                    </div>
                    <div class="col align-self-center">
                        <h2 class="text-center">Update Player</h2>
                        <br>

                        <form action="/players" method="PUT">
                            <div class="form-group">
                                <label for="name">Player Name</label>
                                <input type="text" class="form-control" id="name" aria-describedby="emailHelp"
                                    value=" <%= player.name  %>  " name="name" required>
                            </div>
                            <div class="form-group">
                                <label for="gamertag">#Gamertag</label>
                                <input type="text" class="form-control" id="gamertag" aria-describedby="gamertag"
                                    value="<%= player.gamertag  %>" name="gamertag" required>
                            </div>
                            <div class="form-group">
                                <label for="age">Age</label>
                                <input type="number" class="form-control" id="age" aria-describedby="age"
                                    value="<%= player.age  %>" name="age" required>
                            </div>
                            <div class="form-group">
                                <label for="flag">flag</label>
                                <input type="text" class="form-control" id="flag" aria-describedby="flag"
                                    value="<%= player.flag  %>" name="flag" required>
                            </div>
                            <div class="form-group">
                                <label for="checkout">checkout</label>
                                <input type="date" class="form-control" id="checkout" aria-describedby="checkout"
                                    value="<%= player.checkout  %>" name="checkout" required>
                            </div>
                            <div class="form-group">
                                <label for="checkout">id</label>
                                <input type="text" class="form-control" id="_id" aria-describedby="_id"
                                    value="<%= player._id  %>" name="_id" required>
                            </div>


                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>

                    </div>
                    <div class="col align-self-end">

                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>