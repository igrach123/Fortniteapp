<html lang="en">
<%- include('../partials/head.ejs') %>

  <body>


    <%- include('../partials/nav.ejs') %>

      <div class="container">
        <div class="row">
          <div class="col align-self-center">
            <h2 class="text-center">New Player</h2>
            <br>

            <form action="/players" method="POST">
              <div class="form-group">
                <label for="name">Player Name</label>
                <input type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="name"
                  name="name" required>
              </div>
              <div class="form-group">
                <label for="gamertag">#Gamertag</label>
                <input type="text" class="form-control" id="gamertag" aria-describedby="gamertag" placeholder="gamertag"
                  name="gamertag" required>
              </div>
              <div class="form-group">
                <label for="age">Age</label>
                <input type="number" class="form-control" id="age" aria-describedby="age" placeholder="age" name="age"
                  required>
              </div>
              <div class="form-group">
                <label for="flag">flag</label>
               <!--  <input type="text" class="form-control" id="flag" aria-describedby="flag" placeholder="flag" name="flag"
                  required> -->
                  <select name="flag" id="flag" class="form-control">
                    <option value="/img/croatia.png">Croatia</option>
                    <option value="/img/albania.png">Albania</option>
                    <option value="/img/germany.png">Germany</option>
                    <option value="/img/austria.png">Austria</option>
                    <option value="/img/bosnia-and-herzegovina.png">Bosna</option>
                    <option value="/img/england.png">England</option>
                    <option value="/img/serbia.png">serbia</option>
                    <option value="/img/slovenia.png">Slovenia</option>
                    <option value="/img/saudi-arabia.png">Saudi-arabia</option>
                    <option value="/img/austria.png">Austria</option>
                    <option value="/img/czech-republic.png">Czech-republic</option>
                    <option value="/img/denmark.png">Denmark</option>
                  </select>
              </div>
              <div class="form-group">
                <label for="checkout">checkout</label>
                <input type="date" class="form-control" id="checkout" aria-describedby="checkout" placeholder="checkout"
                  name="checkout" required>
                 
              </div>


              <button type="submit" class="btn btn-primary">Submit</button>
            </form>

          </div>
          <div class="col align-self-end">

          </div>

        </div>

        <%- include('../partials/footer.ejs') %>
      </div>

  </body>

</html>